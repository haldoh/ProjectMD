<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	>
    	<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		>
			<TextView  
    		android:id="@+id/nameLab"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="Nome:"
    		android:layout_weight="1"
    		/>
    		<TextView  
    		android:id="@+id/name"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:layout_weight="1"
    		/>
		</LinearLayout>	
		<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		>
			<TextView  
    		android:id="@+id/catLab"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="Categoria:"
    		android:layout_weight="1"
    		/>
    		<TextView  
    		android:id="@+id/cat"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:layout_weight="1"
    		/>
		</LinearLayout>
		<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		>
			<TextView  
    		android:id="@+id/addrLab"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="Indirizzo:"
    		android:layout_weight="1"
    		/>
    		<TextView  
    		android:id="@+id/addr"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:layout_weight="1"
    		/>
		</LinearLayout>
		<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		>
			<TextView  
    		android:id="@+id/descrLab"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:text="Descrizione:"
    		android:layout_weight="1"
    		/>
    		<TextView  
    		android:id="@+id/descr"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:textSize="18sp"
    		android:layout_weight="1"
    		/>
		</LinearLayout>
		<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="0.85"
    	>
    	<Button
			android:id="@+id/home"
			android:text="Home"
			android:textSize="12sp" 
		 	android:layout_width="fill_parent" 
		 	android:layout_height="wrap_content"
		 	android:layout_weight="1"
		 	/>
    	<Button
			android:id="@+id/mappa"
			android:text="Mappa"
			android:textSize="12sp" 
		 	android:layout_width="fill_parent" 
		 	android:layout_height="wrap_content"
		 	android:layout_weight="1"
		 	/>
		 <Button
			android:id="@+id/elimina"
			android:text="Elimina POI"
			android:textSize="12sp" 
		 	android:layout_width="fill_parent" 
		 	android:layout_height="wrap_content"
		 	android:layout_weight="1"
		 	/>
    </LinearLayout>
</LinearLayout>
